<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.jackbin.SimpleRecord.mapper.RoleMapper">
    <select id="queryByUserId" resultType="cn.jackbin.SimpleRecord.entity.RoleDO">
        select *
        from tb_role r
            left join tb_user_role ur on ur.role_id = r.id
        where
            ur.user_id = #{userId}
            and r.delete_time is null
    </select>
    
    <select id="queryTotal" resultType="int">
        select count(1)
        from tb_role r
        <where>
            <if test="name != null">
                r.name like CONCAT(CONCAT('%', #{name}), '%')
            </if>
            <if test="deleted != null">
                <choose>
                    <when test="deleted">
                        and r.delete_time is not null
                    </when>
                    <otherwise>
                        and r.delete_time is null
                    </otherwise>
                </choose>
            </if>
            <if test="date != null">
                and r.create_time >= #{date}
            </if>
        </where>
    </select>

    <select id="queryByPage" resultType="cn.jackbin.SimpleRecord.entity.RoleDO">
        select *
        from tb_role r
        <where>
            <if test="name != null">
                r.name like CONCAT(CONCAT('%', #{name}), '%')
            </if>
            <if test="deleted != null">
                <choose>
                    <when test="deleted">
                        and r.delete_time is not null
                    </when>
                    <otherwise>
                        and r.delete_time is null
                    </otherwise>
                </choose>
            </if>
            <if test="date != null">
                and r.create_time >= #{date}
            </if>
        </where>
        LIMIT #{begin},#{end}
    </select>

    <update id="notDelete">
        update tb_role set delete_time = null where id = #{id}
    </update>
</mapper>
