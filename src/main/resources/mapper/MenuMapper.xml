<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.jackbin.SimpleRecord.mapper.MenuMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.jackbin.SimpleRecord.entity.RoleMenuDO">
        <id column="id" property="id"/>
        <result column="group_id" property="groupId"/>
        <result column="permission_id" property="permissionId"/>
    </resultMap>

    <select id="queryUserMenus" resultType="cn.jackbin.SimpleRecord.entity.MenuDO">
    select distinct m.*
    from tb_menu m
        LEFT JOIN tb_role_menu rm on rm.menu_id = m.id
    WHERE
        rm.role_id
        in
        (select ur.role_id
        from tb_user u
            LEFT JOIN tb_user_role ur on ur.user_id = u.id
        where u.id = #{userId}
        )
        and m.delete_time is null
    </select>

    <select id="queryAllMenus" resultType="cn.jackbin.SimpleRecord.entity.MenuDO">
    select distinct m.*
    from tb_menu m
    </select>

    <select id="queryRoleMenus" resultType="cn.jackbin.SimpleRecord.entity.MenuDO">
    select distinct m.*
    from tb_menu m
        LEFT JOIN tb_role_menu rm on rm.menu_id = m.id
    WHERE
        rm.role_id = #{roleId}
        and rm.delete_time is null
        and m.delete_time is null
    </select>

    <select id="queryTotal" resultType="int">
        select count(1)
        from tb_menu m
        <where>
            <if test="title != null">
                m.menu_title like CONCAT(CONCAT('%', #{title}), '%')
            </if>
            <if test="deleted != null">
                <choose>
                    <when test="deleted">
                        and r.delete_time is not null
                    </when>
                    <otherwise>
                        and r.delete_time is null
                    </otherwise>
                </choose>
            </if>
            <if test="date != null">
                and r.create_time >= #{date}
            </if>
        </where>
    </select>

    <select id="queryByPage" resultType="cn.jackbin.SimpleRecord.entity.MenuDO">
    select distinct m.*
    from tb_menu m
        <where>
            <if test="title != null">
                m.menu_title like CONCAT(CONCAT('%', #{title}), '%')
            </if>
            <if test="deleted != null">
                <choose>
                    <when test="deleted">
                        and r.delete_time is not null
                    </when>
                    <otherwise>
                        and r.delete_time is null
                    </otherwise>
                </choose>
            </if>
            <if test="date != null">
                and r.create_time >= #{date}
            </if>
        </where>
    LIMIT #{begin},#{end}
    </select>
</mapper>
