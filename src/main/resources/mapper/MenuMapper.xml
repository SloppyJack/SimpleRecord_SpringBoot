<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.jackbin.SimpleRecord.mapper.MenuMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.jackbin.SimpleRecord.entity.RoleMenuDO">
        <id column="id" property="id"/>
        <result column="group_id" property="groupId"/>
        <result column="permission_id" property="permissionId"/>
    </resultMap>

    <select id="queryMenus" resultType="cn.jackbin.SimpleRecord.entity.MenuDO">
    select distinct m.*
    from tb_menu m
        LEFT JOIN tb_role_menu rm on rm.menu_id = m.id
    WHERE
        rm.role_id
        in
        (select ur.role_id
        from tb_user u
            LEFT JOIN tb_user_role ur on ur.user_id = u.id
        where u.id = #{userId}
        )
    </select>
</mapper>
